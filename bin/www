#!/usr/bin/env node

let { withApp } = require('../lib');

withApp((app, boot) => {
  let port = process.env.PORT || '3000';

  app.set('port', port);

  app.listen(port, onListening);

  function onListening() {
    let bind = `port ${port}`;
    console.log('Listening on ' + bind);
    boot();
  }
});
